<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]">

  <br></br>

  <%@owners.each do |pet|%>
      <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  <br>
    <label>and/or, create a new pet:</label>
    <br>
    <label>name:</label>
    <input type="text" name="owner[name]"></input>
    <br>    
  <input type="submit" value="Create Pet">
</form>